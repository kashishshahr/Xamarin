<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Tasks.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Tasks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    mc:Ignorable="d">

    <NavigationPage.TitleView>
        <Label
            FontAttributes="Bold"
            FontSize="26"
            Text="Setup"
            TextColor="White" />
    </NavigationPage.TitleView>

    <Grid>
        <Frame Padding="0" BackgroundColor="#12121A">
            <Image
                Aspect="AspectFit"
                ScaleY="1.5"
                Source="appbg.jpg"
                TranslationY="100" />
        </Frame>

        <StackLayout Orientation="Vertical">
            <Frame
                Margin="15,45,15,2"
                BackgroundColor="{StaticResource newWhite}"
                BorderColor="Black"
                CornerRadius="35"
                HasShadow="True"
                HorizontalOptions="CenterAndExpand">
                <StackLayout>
                    <Label
                        FontFamily="SemiBoldFont"
                        FontSize="25"
                        HorizontalTextAlignment="Center"
                        Opacity="1"
                        Text="What will this device be used as?"
                        TextColor="{StaticResource newBlue}"
                        VerticalTextAlignment="Center" />
                </StackLayout>
            </Frame>

            <StackLayout
                Margin="0,60,0,0"
                BackgroundColor="{StaticResource newWhite}"
                Orientation="Horizontal"
                VerticalOptions="CenterAndExpand">
                <StackLayout
                    x:Name="ControllerLayout"
                    Padding="5,10,2,10"
                    Orientation="Horizontal">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="OnControllerRadioButtonTapped" />
                    </StackLayout.GestureRecognizers>
                    <StackLayout Orientation="Vertical">
                        <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                            <Image
                                x:Name="ControllerRadioImage"
                                HeightRequest="40"
                                Source="unchecked.png" />

                            <Label
                                x:Name="ControllerRadioLabel"
                                FontFamily="BoldFont"
                                FontSize="20"
                                HorizontalTextAlignment="Center"
                                Text="Controller"
                                TextColor="#1e3d59"
                                VerticalOptions="CenterAndExpand" />
                        </StackLayout>
                        <Label
                            x:Name="ControllerInfoLabel"
                            FontAttributes="Bold"
                            FontFamily="ItalicFont"
                            FontSize="15"
                            HorizontalTextAlignment="Center"
                            Text="Tracks Location of agent's device"
                            TextColor="#1e3d59" />
                    </StackLayout>
                </StackLayout>
                <StackLayout
                    x:Name="AgentLayout"
                    Padding="5,10,5,10"
                    Orientation="Horizontal">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="OnAgentRadioButtonTapped" />
                    </StackLayout.GestureRecognizers>

                    <StackLayout Orientation="Vertical">
                        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                            <Image
                                x:Name="AgentRadioImage"
                                HeightRequest="40"
                                Source="unchecked.png" />
                            <Label
                                x:Name="AgentRadioLabel"
                                FontFamily="BoldFont"
                                FontSize="20"
                                Text="Agent"
                                TextColor="#1e3d59"
                                VerticalOptions="Center" />
                        </StackLayout>
                        <Label
                            x:Name="AgentInfoLabel"
                            FontAttributes="Bold"
                            FontFamily="ItalicFont"
                            FontSize="15"
                            HorizontalTextAlignment="Center"
                            Text="Send's Location to Controller's device"
                            TextColor="#1e3d59" />
                    </StackLayout>
                </StackLayout>
            </StackLayout>

            <StackLayout
                Margin="0,0,0,80"
                HorizontalOptions="Center"
                VerticalOptions="EndAndExpand">
                <Button
                    Padding="20"
                    xct:ShadowEffect.Color="Blue"
                    xct:ShadowEffect.OffsetX="15"
                    xct:ShadowEffect.OffsetY="5"
                    BackgroundColor="{StaticResource newWhite}"
                    BorderColor="{StaticResource newBlue}"
                    BorderWidth="5"
                    Clicked="btn_clicked"
                    CornerRadius="7"
                    FontSize="25"
                    HorizontalOptions="Center"
                    Text="Let's set it up!"
                    TextColor="#1e3d59"
                    VerticalOptions="EndAndExpand" />
            </StackLayout>


        </StackLayout>
    </Grid>
</ContentPage>


