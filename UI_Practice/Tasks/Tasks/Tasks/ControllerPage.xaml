<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Tasks.ControllerPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <NavigationPage.TitleView>
        <Label
            FontAttributes="Bold"
            FontSize="26"
            Text="Controller"
            TextColor="White" />                                                                                  
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <StackLayout Margin="15">
            <Label Margin="10" FontSize="25">Lets set it up!</Label>
            <Label Margin="10" FontSize="20">Fill up following details to create a new controller</Label>
            <Entry Margin="10,20,20,20" Placeholder="Give it a name" />
            <Entry
                Margin="10,20,20,20"
                IsPassword="True"
                Placeholder="password" />
            <Entry
                Margin="10,20,20,20"
                IsPassword="True"
                Placeholder="confirm password" />
            <Entry
                Margin="10,20,20,20"
                IsPassword="True"
                Placeholder="your email" />
            <Button Text="Register" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>